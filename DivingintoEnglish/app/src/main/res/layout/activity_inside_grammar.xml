<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.grammar.InsideGrammarActivity"
    android:orientation="vertical"
    android:background="#008B8B">
    <TextView
        android:id="@+id/grammar_name"
        android:text="Present Continuous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:textColor="#FFB6C1"
        android:textStyle="bold"
        tools:ignore="HardcodedText,SpUsage" />
    <TextView
        android:id="@+id/grammar_definition"
        android:text="Время, которое употребляется, когда речь идет о действиях, происходящих в данный момент."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        tools:ignore="HardcodedText,SpUsage"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/grammar_symbols"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Указатели времени: now, at the moment"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:textSize="15dp"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/grammar_scheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="am(применяется вместе с I(Я)), is(применяется вместе с he(он),she(она),it(оно)), are("
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:textSize="15dp"
        tools:ignore="HardcodedText,SpUsage" />
</LinearLayout>