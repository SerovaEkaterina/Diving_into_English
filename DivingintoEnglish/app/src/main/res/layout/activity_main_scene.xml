<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/more3"
    android:orientation="vertical"
    android:gravity="center_horizontal|center"
    tools:context=".controller.MainSceneActivity">
    <Button
        android:id="@+id/button_alfavit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="ALPHABET"
        android:textSize="30sp"
        android:background="@drawable/outline_background"
        android:layout_marginBottom="10dp"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/button_grammar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="GRAMMAR"
        android:textSize="30sp"
        android:background="@drawable/outline_background"
        android:layout_marginBottom="10dp"
           tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/button_video"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="VIDEO"
        android:textSize="30sp"
        android:background="@drawable/outline_background"
        android:layout_marginBottom="10dp"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/button_histories"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="STORIES"
        android:textSize="30sp"
        android:background="@drawable/outline_background"
        tools:ignore="HardcodedText" />
</LinearLayout>