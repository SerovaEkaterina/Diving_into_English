<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/morez3"
    android:orientation="vertical"
    tools:context=".controller.MainSceneActivity">
    <TextView
        android:id="@+id/zitata_eng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="'A different language is a different vision of life.'"
        android:textSize="20dp"
        android:textColor="#00008B"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        tools:ignore="RtlHardcoded"
        android:layout_marginRight="8dp">

        <Button
            android:id="@+id/sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listen"
            tools:ignore="HardcodedText" />

        <TextView
        android:id="@+id/author_eng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Federico Fellini"
        android:textColor="#00008B"
        android:textSize="20dp"
        android:gravity="right"
        android:layout_marginLeft="16dp"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

    </LinearLayout>

    <TextView
        android:id="@+id/zitata_rus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="'Другой язык — это другое видение жизни.'"
        android:textColor="#00008B"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
    <TextView
        android:id="@+id/author_rus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Федерико Феллини"
        android:textColor="#00008B"
        android:textSize="20dp"
        android:gravity="right"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessLeaf"
        android:layout_marginTop="100dp"
        android:layout_gravity="center">
        <Button
            android:id="@+id/button_alfavit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_background"
            android:text="ALPHABET"
            android:textSize="25sp"
            tools:ignore="ButtonStyle,HardcodedText" />
        <Button
            android:id="@+id/button_grammar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_background"
            android:text="GRAMMAR"
            android:textSize="25sp"
            android:layout_marginLeft="40dp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded"/>
    </LinearLayout>
</LinearLayout>

